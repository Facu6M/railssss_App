<div class="row">
  <div class="col-lg-12">
    <div class="card p-5">
      <%= form_with model: @product do |f| %>
        <% if @product.errors.any? %>
          <div class="alert alert-danger">
            <ul>
              <% @product.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.label :name, "Nombre" %>
          <%= f.text_field :name, class: "form-control", placeholder: 'Juan' %>
        </div>
        <div class="form-group">
          <%= f.label :reference, "Profesion" %>
          <%= f.text_field :reference, class: "form-control", placeholder: 'Arquitecto' %>
        </div>
        <div class="form-group">
          <%= f.label :description, "Historial laboral" %>
          <%= f.text_area :description, class: "form-control", placeholder: 'Trabajo - empresa - año' %>
        </div>
        <div class="form-group">
          <%= f.label :capacitaciones, "Capacitaciones" %>
          <%= f.text_area :capacitaciones, class: "form-control", placeholder: 'Capacitacion - empresa - año' %>
        </div>
        <div class="form-group">
          <%= f.label :cargo, "Cargo-Dependencia" %>
          <%= f.text_area :cargo, class: "form-control", placeholder: 'cargo - dependencia' %>
        </div>
        <div class="form-group">
          <%= f.submit "Enviar", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
