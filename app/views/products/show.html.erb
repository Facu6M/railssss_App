<div class="row">
  <div class="col-lg-12">
    <h1>Detalles del Empleado</h1>
    <%= link_to "Regresar al listado de productos", products_path, class: 'btn btn-primary' %>
    <%= link_to "Editar", edit_product_path(@product), class: 'btn btn-primary' %>
    <div class="card" style="margin-top: 20px;">
      <table class="table">
        <tr>
          <td><b>Nombre del Empleado:</b></td>
          <td><%= @product.name %></td>
        </tr>
        <tr>
          <td><b>Profesion:</b></td>
          <td><%= @product.reference %></td>
        </tr>
        <tr>
          <td><b>Historial Laboral:</b></td>
          <td><%= @product.description %></td>
        </tr>
        <tr>
          <td><b>Capacitaciones:</b></td>
          <td><%= @product.capacitaciones %></td>
        </tr>
        <tr>
          <td><b>Cargo-Dependencia:</b></td>
          <td><%= @product.cargo %></td>
        </tr>
        <tr>
          <td><b>Fecha de creación:</b></td>
          <td><%= @product.created_at %></td>
        </tr>
        <tr>
          <td><b>Fecha de actualización:</b></td>
          <td><%= @product.updated_at %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
<br>
     <%= button_to "Borrar producto", @product, method: :delete, class: "btn btn-danger"%>
